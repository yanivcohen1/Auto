	<dependency>
		<groupId>com.sun.jmx</groupId>
		<artifactId>jmxri</artifactId>
		<version>1.2.1</version>
	</dependency>         -->   
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>gwt-maven-plugin</artifactId>
        <version>2.5.1</version>
        <executions>
          <execution>
            <goals>
              <goal>compile</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <runTarget>Dnd_Gwt.html</runTarget><!-- index.html -->
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>